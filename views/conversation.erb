<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Conversation #<%= @conversation_id %> - Claude Dialogue</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-custom mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <span class="brand-icon">ðŸ¤–</span> Claude Dialogue
        </a>
        <div class="navbar-text">
          <span class="badge" id="statusBadge">Loading...</span>
        </div>
      </div>
    </nav>

    <!-- Conversation Header -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card floating-card">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1">Conversation #<%= @conversation_id %></h5>
                <p class="text-muted mb-0" id="conversationTitle">Loading...</p>
              </div>
              <div class="text-end">
                <div class="mb-1">
                  <strong>Turn:</strong> <span id="turnCount">-</span>
                </div>
                <div>
                  <strong>Started:</strong> <span id="startTime">-</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Conversation View -->
    <div class="row">
      <!-- Claude A Column -->
      <div class="col-lg-4">
        <div class="card floating-card conversation-panel">
          <div class="card-header bg-claude-a">
            <h6 class="mb-0">ðŸ¤– Claude A</h6>
          </div>
          <div class="card-body p-3" id="claudeAMessages">
            <div class="text-center text-muted py-5">
              <div class="spinner-border spinner-border-sm" role="status"></div>
              <p class="mt-2 small">Waiting for messages...</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Summary Column -->
      <div class="col-lg-4">
        <div class="card floating-card conversation-panel">
          <div class="card-header bg-summary">
            <h6 class="mb-0">ðŸ“Š Conversation Summary</h6>
          </div>
          <div class="card-body p-3" id="summaryPanel">
            <div class="text-center text-muted py-5">
              <p class="small">Summary will appear after a few turns...</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Claude 2 Column -->
      <div class="col-lg-4">
        <div class="card floating-card conversation-panel">
          <div class="card-header bg-claude-2">
            <h6 class="mb-0">ðŸ¤– Claude 2</h6>
          </div>
          <div class="card-body p-3" id="claude2Messages">
            <div class="text-center text-muted py-5">
              <div class="spinner-border spinner-border-sm" role="status"></div>
              <p class="mt-2 small">Waiting for messages...</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Full Transcript -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card floating-card">
          <div class="card-header">
            <h6 class="mb-0">ðŸ“œ Full Transcript</h6>
          </div>
          <div class="card-body p-3" id="fullTranscript">
            <div class="text-center text-muted py-3">
              <p class="small">Loading transcript...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const conversationId = <%= @conversation_id %>;
  </script>
  <script src="/js/conversation.js"></script>
</body>
</html>
